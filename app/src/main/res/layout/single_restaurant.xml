<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restoran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restoran nomi"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"/>


        <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/restoran" />
        <TextView
            android:id="@+id/manager_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menejer ismi"
            android:layout_below="@+id/image"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/restoran_joylashuvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joylashuvi"
            android:layout_below="@+id/manager_name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/telefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon raqam"
            android:layout_below="@+id/restoran_joylashuvi"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>