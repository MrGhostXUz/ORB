<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_purple"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Ro'yxatdan o'tish"
        android:textSize="25dp"
        android:textColor="@android:color/holo_orange_light"
        android:textAllCaps="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Familiya"
        android:hint="Familiya"
        android:layout_weight="1"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ism"
        android:layout_weight="1"
        android:hint="Ism"
        android:inputType="textPersonName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Login"
        android:id="@+id/login"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parol"
        android:layout_weight="1"
        android:id="@+id/parol"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parolni takrorlang"
        android:layout_weight="1"
        android:id="@+id/tasdiqlash"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon raqam"
        android:layout_weight="1"
        android:id="@+id/telefonraqam"
        android:inputType="phone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restoran nomi"
        android:layout_weight="1"
        android:id="@+id/restoran"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Joylashuvi"
        android:id="@+id/joylashuv"
        android:layout_weight="1"
        android:inputType="textMultiLine"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Qo'shimcha izoh ucun"
            android:layout_weight="2"
            android:id="@+id/izoh"
            android:inputType="textMultiLine"/>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:text="Ro'yxatdan o'tish"
        android:shadowColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:onClick="onClick"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:textSize="80dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="ORB"/>

</LinearLayout>